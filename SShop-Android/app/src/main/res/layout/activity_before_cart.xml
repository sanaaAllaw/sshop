<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="50%" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/share"
        app:layout_marginRightPercent="15%"
        app:layout_marginTopPercent="15%" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20dp"
        app:layout_heightPercent="50%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="70%"
        app:layout_widthPercent="50%" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/itemqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20dp"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="80%"
        app:layout_widthPercent="50%" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20dp"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="70%"
        app:layout_widthPercent="50%" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/itemqtyedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="qty"
        android:textSize="20dp"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="80%"
        app:layout_widthPercent="50%" />

    <Button
        android:id="@+id/button"
        android:layout_width="186dp"
        android:layout_height="103dp"
        android:background="@drawable/signup_btn_normal"
        android:text="Add to cart"
        android:textSize="20dp"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="90%"
        app:layout_widthPercent="50%" />
</android.support.percent.PercentRelativeLayout>
